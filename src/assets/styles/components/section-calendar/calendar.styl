  &__info
    display flex
    justify-content space-between
    width 100%

  &__item-date
    font-size 100rem
    line-height 118rem
    color #fff
    transition color .3s

    @media $mobile
      font-size 75rem
      line-height 89rem

  &__item-episodes
    display flex
    flex-direction column

  &__item-episode
    margin-top 24rem
    font-size 22rem
    line-height 26rem
    color #818181
    transition color 0.5s

    @media $mobile
      margin-top 19rem
      font-size 17rem
      line-height 19rem



  &__item-text
    font-size 16rem
    line-height 22rem
    color #fff
    opacity 0
    visibility hidden
    transition opacity 0.5s, visibility 0.5s

  &__item--hov
    transition background-color .4s
    @media $desktop
      &:hover 
        background-color #fff
        .calendar__item-text
        .calendar__item-date,
        .calendar__item-episode
          color #000

  &__item-link
    width 167rem
    margin-left 11rem
    padding 7rem 0
    font-size 16rem
    line-height 23rem

    @media $mobile
      width 125rem
      margin-top 7rem
      padding 6rem 0
      font-size 12rem
      line-height 24rem
  
  &__item-link-play
    width 32rem
    height 32rem
    margin-right 10rem

    @media $mobile
      width 23rem
      height 23rem

  .swiper-wrapper
    align-items flex-end

  .swiper-button-prev, 
  .swiper-button-next
    position absolute
    bottom 0
    width 64rem
    height 64rem
    circle
      fill transparent
      transition fill 0.5s

    @media $desktop
      &:hover 
        circle
          fill #000

    @media $mobile 
      width 31rem
      height 31rem

  .swiper-button-next
    right 286rem

    @media $mobile 
      right 19rem
  
  .swiper-button-prev
    right 376rem

    @media $mobile 
      right 63rem

  .swiper-pagination 
    position absolute
    bottom 33rem
    left 0rem
    max-width 1260rem
    width 100%

    @media $mobile 
      bottom 15rem
      max-width 239rem

  .swiper-pagination-bullet
    display inline-block
    width 218rem
    height 1rem

  .swiper-pagination-bullet-active
    height 2rem
    background-color #000

  .swiper-pagination-progressbar 
    background #999999
  
  .swiper-pagination-progressbar .swiper-pagination-progressbar-fill 
    background #fff
    position absolute
    left 0
    bottom 0
    width 100%
    transform scale(0)
    transform-origin left top

