.calendar
  position relative
  padding 128rem 0 101rem 164rem
  overflow hidden

  @media $mobile
    padding 125rem 0 45rem 20rem

  &__bg
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-repeat no-repeat
    background-position center
    background-size cover
    z-index -1
    // transition opacity 0.1s, visibility 0.1s

    opacity 0
    visibility hidden

    &.show
      opacity 1
      visibility visible

    &:before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background linear-gradient(115.78deg, #123143 7.27%, rgba(8, 31, 45, 0) 94.21%)
      opacity 0.5

      @media $mobile 
        display none
        background linear-gradient(115.78deg, #123143 7.27%, rgba(8, 31, 45, 0) 94.21%)

  &__title
    max-width 955rem
    margin-bottom 37rem
    margin-left -6rem

    @media $mobile
      .scroll-anim__wrapper
        &:nth-child(1)
          margin-bottom -20rem

  &__slider-wrap
    position relative
    padding-bottom 129rem

    @media $mobile 
      padding-bottom 83rem

  &__slider
    width 95%
    overflow visible

  &__slide 
    width 351rem
    height 100%
    margin-right 42rem

    @media $mobile
      width 262rem
      margin-right 32rem

    &:nth-child(3)
      margin-right 84rem

    &:nth-child(7)
      margin-right 120rem

      @media $mobile
        margin-right 0

  &__month
    position relative
    margin-bottom 55rem
    font-size 26rem
    line-height 31rem
    color #fff

    @media $mobile 
      margin-bottom 0
      padding-bottom 81rem
      font-size 20rem
      line-height 24rem

      &:after
        content ''
        position absolute
        left 0
        bottom 2rem
        width 1rem
        height 70rem
        border-left 1rem dashed rgba($white, 0.5)

  &__item
    display flex
    flex-direction column
    justify-content space-between
    width 100%
    height 220rem
    padding 7rem 31rem 27rem 38rem
    border 1px solid rgba(#fff, 0.5)
    cursor pointer
    transition border 0.5s, transform .4s

    @media $mobile
      height 164rem
      padding 7rem 31rem 27rem 20rem

    &:not(.calendar__item--available)
      &:hover
        @media $desktop
          border-color #fff
          & ^[0]__item-episode
            color #C5C5C5
          & ^[0]__item-text
            opacity 1
            visibility visible

    &--available
      padding 7rem 25rem 31rem 30rem
      background-color #fff
      border 1px solid rgba(#fff, 0.9)

      &:hover
        @media $desktop
          transform scale(1.11)

          .btn_black
            background-color $black
            color $white
            
            .btn__play
              path,
              circle
                stroke $white
            

      @media $mobile
        padding-left 20rem
        padding-right 20rem

      & ^[0]__item-date
        color #000
      & ^[0]__item-episode
        position relative
        padding-right 53rem
        color #000
        font-weight 700

        @media $mobile
          padding-right 38rem

