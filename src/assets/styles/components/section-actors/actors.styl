.actors
  position relative
  padding 112rem 154rem 0 165rem
  overflow hidden
  min-height vw(950)
  height 100vh
  background $bg-blue

  @media $mobile 
    height auto
    min-height auto
    padding 92rem 0 67rem 20rem
    overflow hidden

  &__title
    max-width 997rem
    margin-bottom 44rem
    margin-left -7rem

    @media $mobile 
      margin-left -2rem
      margin-bottom 30rem

  &__slider-wrap
    position relative
    // padding-bottom 105rem
    transition padding .4s

    @media $mobile 
      padding-bottom 49rem

  &__slider
    width 100%
    overflow visible

    @media $mobile 
      overflow visible

  &__slide 
    width 354rem
    height 100%
    transition all .4s

    
    &:hover
      @media $desktop
        .actors__item-img
          transform scale(1.2)

    @media $mobile 
      width 259rem

    &:not(:last-of-type)
      margin-right 55rem

      @media $mobile 
        margin-right 39rem

  &__item
    width 100%
    height 100%
    cursor pointer

    
  &__item-overimg
    width 100%
    height 435rem
    margin-bottom 34rem
    transition all .3s
    overflow hidden

    @media $mobile 
      height 317rem
      margin-bottom 16rem

  &__item-img
    width 100%
    transition transform .3s

  &__item-name
    font-size 20rem
    line-height 24rem

    @media $mobile 
      font-size 16rem
      line-height 19rem

  .swiper-button-prev, .swiper-button-next
    position absolute
    // bottom 0
    top 558rem
    width 64rem
    height 64rem

    @media $mobile 
      top auto
      bottom 0
      width 31rem
      height 31rem

    svg
      circle, path
        transition 0.5s
    @media $desktop
      &:hover
        svg
          circle
            fill #000
          path 
            fill #fff
            stroke #fff

  .swiper-button-prev
    right 228rem

    @media $mobile 
      right 62rem

  .swiper-button-next
    right 132rem

    @media $mobile 
      right 20rem

  .swiper-pagination 
    position absolute
    top 593rem
    left 0
    max-width 1260rem
    width 100%

    @media $mobile 
      top auto
      bottom 15rem
      max-width 239rem

  .swiper-pagination-bullet
    display inline-block
    width 218rem
    height 1rem
    // background-color #999999

  .swiper-pagination-bullet-active
    height 2rem
    background-color #000

  .swiper-pagination-clickable .swiper-pagination-bullet 
    cursor pointer

  .swiper-pagination-progressbar 
    background #999999
  
  .swiper-pagination-progressbar .swiper-pagination-progressbar-fill 
    background #000
    position absolute
    left 0
    bottom 0
    width 100%
    transform scale(0)
    transform-origin left top

