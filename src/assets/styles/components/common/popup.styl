.popup
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  display flex
  align-items center
  justify-content center
  background-color #E4ECEE
  z-index 105

  &__close-button
    position absolute
    top 47rem
    right 47rem
    width 47rem
    height 47rem
