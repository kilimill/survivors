    background-size contain
    background-repeat no-repeat
    transition transform .3s

    @media $desktop
      &:hover
        transform scale(1.15)

    @media $mobile
      margin 0 auto
      width vm(130)
      height vm(103)

  &__basic-title
    margin-top vw(26)
    width vw(155)
    color #000
    text-align center
    font-weight 600
    font-size vw(22)

    @media $mobile
      margin-top vm(15)
      width vm(113)
      font-size vm(18)

  &__pag
    // margin-bottom vw(22)
    transition transform .3s
    pos relative
    height vw(76)

    @media $desktop
      &:hover
        .slider__pag-icon
          transform scale(1.3)

    @media $mobile
      margin-bottom vm(11)
      height vm(42)

    .slider__pag-num
      transition padding .3s
      // transition color .3s, transform .3s
      will-change transform

    .slider__pag-icon
      // transition width .3s, height .3s
      transition transform .3s
      will-change transform

