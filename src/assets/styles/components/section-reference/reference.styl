.reference
  padding vw(70) 0 vw(180)
  background-color $bg-blue

  @media $mobile
    padding vm(33) 0 vm(93)

  &__title
    font-size vw(60)
    line-height 118%
    width vw(1125)
    margin 0 auto vw(117)
    text-align center

    @media $mobile
      font-size vm(18)
      width vm(335)
      margin-bottom vm(37)

  &__inner
    display flex
    align-items center

    @media $mobile
      flex-direction column

  &__content
    display flex
    flex-wrap wrap
    margin vw(-230) 0 0 vw(423)
    width vw(1093)

    @media $mobile
      margin vm(-21) auto vm(70)
      width vm(322)

  &__item
    position relative
    margin-top vw(230)
    margin-left vw(49)
    width vw(224)


    &.active
      .slider__pag-num
        color #000

      .slider__pag-icon
        &::before
          opacity 1

    @media $mobile
      display flex
      flex-direction column
      align-items center
      margin-top vm(21)
      margin-left 0
      width vm(150)

      &:nth-child(odd)
        margin-right vm(14)

    &[disabled]
      opacity .6
      pointer-events none

    &-title
      margin-bottom vw(10)
      color $black
      font-weight 600
      font-size vw(20)
      line-height 135%

      @media $mobile
        margin-bottom vm(7)
        text-align center
        font-size vm(17)
        line-height 126%

    &-number
      color #787878
      font-size vw(16)
      line-height 135%

      @media $mobile
        font-size vm(12)

  &__basic-link
    display flex
    justify-content center
    margin-top vw(86)
    width vw(179)
    height vw(141)
