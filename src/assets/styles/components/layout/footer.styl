.footer
  width 100%
  display flex
  justify-content space-between
  color #fff

  @media $mobile
    position absolute
    bottom auto
    top vm(55)
    padding vm(10) vm(20)
    mix-blend-mode: normal;

    &_black
      .tags-info__tag
        color $black

        &::before
          background-color $black
          
      .tags-info__restrictions
        color $black
        border-color $black


  &__inner
    pos fixed
    bottom vw(30)
    left vw(41)
    mix-blend-mode: difference;
    z-index 15
    pointer-events none

    @media $mobile
      position absolute
      bottom auto
      top vm(10)
      left vm(20)
      mix-blend-mode: normal;

  &__inner,
  .social
    @media $desktop
      opacity 0
      transform translateY(100%)
      transition transform .4s, opacity .4s

  &__special
    pos absolute
    bottom vw(225)
    left vw(-116)
    font-size vw(15)
    line-height 135%
    text-transform uppercase
    transform: rotate(-90deg)
    padding-left vw(166)
    background-blend-mode: difference;

    &::before
      content ''
      pos absolute
      width vw(118)
      height vw(1)
      background-color $white
      left 0
      top 50%
      transform translateY(-50%)   

  &_white
    color $white

    .footer__special
      color $white

      &::before
        background-color $white 

  .social
    pos fixed
    bottom vw(30)
    right vw(41)
    mix-blend-mode: difference;

body.open
	.footer 
		.tags-info
			opacity 0
			font-size 0

.main[loaded]
  @media $desktop
    .footer__inner
    .footer .social
      opacity 1
      transition-delay 1.5s
      transform translateY(0)