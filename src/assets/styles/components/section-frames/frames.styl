.frames
  background $bg-blue
  position relative
  padding 112rem 0 79rem 164rem

  @media $desktop
      overflow hidden

  @media $mobile 
    padding 124rem 20rem 79rem 20rem

  &__title
    max-width 997rem
    // font-size 100rem
    // line-height 118rem
    margin-bottom 42rem
    margin-left -6rem

    @media $mobile 
      margin-bottom 32rem
      margin-left -3rem

  &__slider-wrap
    position relative
    padding-bottom 109rem

    @media $mobile 
      padding-bottom 72rem

  &__slider
    width 100%
    height 486rem
    
    @media $desktop
      overflow visible

    @media $mobile 
      height 300rem

  &__slide 
    width 1171rem
    height 100%

    @media $mobile
      width 100%
      height calc((100% - 20rem) / 2)
      margin-top vm(10) !important
      margin-bottom vm(10)

  &__item
    width 100%
    height 100%
    // cursor pointer

    @media $mobile 
      height 140rem

    &:not(:last-of-type)

      @media $mobile
        margin-bottom 20rem

  &__item-overimg
    width 100%
    height 100%

  &__item-img
    width 100%
    height 100%
    object-fit cover

  .swiper-button-prev, .swiper-button-next
    position absolute
    bottom 0
    width 64rem
    height 64rem

    @media $mobile 
      width 31rem
      height 31rem

    svg
      circle, path
        transition 0.5s
    @media $desktop
      &:hover
        svg
          circle
            fill #000
          path 
            fill #fff
            stroke #fff

  .swiper-button-prev
    right 383rem

    @media $mobile 
      right 42rem

  .swiper-button-next
    right 286rem

    @media $mobile 
      right 0rem

  .swiper-pagination 
    position absolute
    bottom 33rem
    left 0rem
    max-width 1260rem
    width 100%

    @media $mobile 
      bottom 14rem
      max-width 239rem

  .swiper-pagination-bullet
    display inline-block
    width 218rem
    height 1rem
    // background-color #999999

  .swiper-pagination-bullet-active
    height 2rem
    background-color #000

  .swiper-pagination-progressbar 
    background #999999
  
  .swiper-pagination-progressbar .swiper-pagination-progressbar-fill 
    background #000
    position absolute
    left 0
    bottom 0
    width 100%
    transform scale(0)
    transform-origin left top

